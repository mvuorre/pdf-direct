{
  "manifest_version": 2,
  "name": "Direct PDF Download",
  "version": "1.3.1",
  "description": "Redirects academic journal fancy PDF viewers to direct file downloads.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.acs.org/*",
    "*://*.cambridge.org/*",
    "*://*.ieee.org/*",
    "*://*.jstor.org/*",
    "*://*.nature.com/*",
    "*://*.oup.com/*",
    "*://*.plos.org/*",
    "*://*.royalsocietypublishing.org/*",
    "*://*.sagepub.com/*",
    "*://*.sciencedirect.com/*",
    "*://*.springer.com/*",
    "*://*.tandfonline.com/*",
    "*://*.wiley.com/*",
    "*://*.oclc.org/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{f2b67e28-b47e-4b3f-9c92-4a201352ff73}"
    }
  }
}