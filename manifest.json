{
  "manifest_version": 2,
  "name": "Direct PDF Download",
  "version": "1.2",
  "description": "Redirects academic journal fancy PDF viewers to direct file downloads.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.acs.org/*",
    "*://*-acs-org.*/*",
    "*://*.cambridge.org/*",
    "*://*-cambridge-org.*/*",
    "*://*.ieee.org/*",
    "*://*-ieee-org.*/*",
    "*://*.jstor.org/*",
    "*://*-jstor-org.*/*",
    "*://*.nature.com/*",
    "*://*-nature-com.*/*",
    "*://*.oup.com/*",
    "*://*-oup-com.*/*",
    "*://*.plos.org/*",
    "*://*-plos-org.*/*",
    "*://*.royalsocietypublishing.org/*",
    "*://*-royalsocietypublishing-org.*/*",
    "*://*.sagepub.com/*",
    "*://*-sagepub-com.*/*",
    "*://*.sciencedirect.com/*",
    "*://*-sciencedirect-com.*/*",
    "*://*.springer.com/*",
    "*://*-springer-com.*/*",
    "*://*.tandfonline.com/*",
    "*://*-tandfonline-com.*/*",
    "*://*.wiley.com/*",
    "*://*-wiley-com.*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{f2b67e28-b47e-4b3f-9c92-4a201352ff73}"
    }
  }
}