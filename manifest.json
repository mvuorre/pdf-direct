{
  "manifest_version": 2,
  "name": "Direct PDF Download",
  "version": "1.2",
  "description": "Redirects academic journal fancy PDF viewers to direct file downloads.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.royalsocietypublishing.org/*",
    "*://*.sagepub.com/*",
    "*://*.tandfonline.com/*",
    "*://*.wiley.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}